<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/timeResultBlock_container1"
        android:layout_width="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/timeResultBlock_container2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/timeResultBlock_container3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/timeResultBlock_maximizeIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_dot_crap" />

                <LinearLayout
                    android:id="@+id/timeResultBlock_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/timeResultBackground_day"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="1dp">

                    <TextView
                        android:id="@+id/timeResultBlock_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/timeResultBlock_timeUnit"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingStart="3dp"
                        android:paddingEnd="3dp"
                        android:text="300"
                        android:textSize="@dimen/timeResult_number" />

                    <TextView
                        android:id="@+id/timeResultBlock_timeUnit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingStart="3dp"
                        android:paddingEnd="3dp"
                        android:text="@string/calculator_timeUnit_day_full"
                        android:textSize="@dimen/timeResult_timeUnit" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>